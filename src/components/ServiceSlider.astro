---
import { Image } from "astro:assets";

import asphaltReplacement from "@/assets/imgs/service/asphalt-paving/replacement-9.webp";
import sealerService from "@/assets/imgs/service/sealer/sealer-service.webp";
import paverService from "@/assets/imgs/service/pavers/paver-maintenance-2.webp";
import concreteService from "@/assets/imgs/service/concrete/concrete-service.webp";
import landscapingService from "@/assets/imgs/service/landscaping/landscaping-service.webp";
---

<style>
  @import "/src/assets/css/service-cards.css";
</style>

<!-- Service Slider area start -->
<section
  aria-label="Services section"
  class="service-slider-section section-space bg-color-1"
>
  <div class="shape-10" data-background="/assets/imgs/shapes/shape-10.webp">
  </div>
  <div class="shape-9" data-background="/assets/imgs/shapes/shape-9.webp"></div>
  <div class="container">
    <div class="row align-items-center justify-content-between">
      <div
        class="col-xxl-12 d-flex justify-content-between align-items-center flex-wrap"
      >
        <div class="title-box mb-50" data-aos="fade-left" data-aos-delay="500">
          <span class="section-sub-titledos">
            Paving and Asphalt Contractor Near You
          </span>
          <h3 class="section-title mt-35">
            <a
              href="/paving-services-near-me"
              style="color: inherit; text-decoration: none;"
            >
              Our Services
            </a>
          </h3>
        </div>
        <div class="service_1_navigation__wrapprer position-relative z-1 mt-30">
          <div class="common-slider-navigation">
            <button class="service-1-button-prev" aria-label="Previous service">
              <i class="fas fa-arrow-left"></i>
            </button>
            <button class="service-1-button-next" aria-label="Next service">
              <i class="fas fa-arrow-right"></i>
            </button>
          </div>
        </div>
      </div>
    </div>

    <div class="swiper service-active-1">
      <div class="swiper-wrapper">
        <!-- Driveway Paving -->
        <div class="swiper-slide">
          <div class="service-card">
            <!-- 1. Sección de Imagen -->
            <div class="service-image-section">
              <a href="/services/asphalt-paving/">
                <figure class="service-image">
                  <Image
                    src={asphaltReplacement}
                    alt="Asphalt Paving"
                    width={370}
                    height={278}
                    format="webp"
                  />
                </figure>
              </a>
            </div>

            <!-- 2. Sección de Icono -->
            <div class="service-icon-section">
              <div class="icon-box">
                <i class="fas fa-road"></i>
              </div>
            </div>

            <!-- 3. Sección de Título -->
            <div class="service-title-section">
              <h3 class="service-title">
                <a href="/services/asphalt-paving/">Driveway Paving</a>
              </h3>
            </div>

            <!-- 4. Sección de Descripción -->
            <div class="service-description-section">
              <p class="service-description">
                We specialize in expert residential asphalt paving designed to
                create long-lasting, weather-resistant driveways. Our services
                enhance curb appeal and functionality through precise grading,
                high-quality materials, and a smooth, durable finish tailored to
                your property.
              </p>
            </div>

            <!-- 5. Sección de Botón -->
            <div class="service-button-section">
              <a href="/services/asphalt-paving/" class="service-btn">
                Read More <i class="fas fa-angles-right"></i>
              </a>
            </div>
          </div>
        </div>

        <!-- Sealer -->
        <div class="swiper-slide">
          <div class="service-card">
            <!-- 1. Sección de Imagen -->
            <div class="service-image-section">
              <a href="/services/sealer/">
                <figure class="service-image">
                  <Image
                    src={sealerService}
                    alt="Sealcoating"
                    width={370}
                    height={278}
                    format="webp"
                  />
                </figure>
              </a>
            </div>

            <!-- 2. Sección de Icono -->
            <div class="service-icon-section">
              <div class="icon-box">
                <i class="fas fa-fill-drip"></i>
              </div>
            </div>

            <!-- 3. Sección de Título -->
            <div class="service-title-section">
              <h3 class="service-title">
                <a href="/services/sealer/">Sealer</a>
              </h3>
            </div>

            <!-- 4. Sección de Descripción -->
            <div class="service-description-section">
              <p class="service-description">
                Our premium sealcoating, crack filling, and line striping
                services extend the life of your pavement. These treatments
                shield your surfaces from weather, wear, and heavy traffic while
                maintaining a sleek, protected finish.
              </p>
            </div>

            <!-- 5. Sección de Botón -->
            <div class="service-button-section">
              <a href="/services/sealer/" class="service-btn">
                Read More <i class="fas fa-angles-right"></i>
              </a>
            </div>
          </div>
        </div>

        <!-- Pavers -->
        <div class="swiper-slide">
          <div class="service-card">
            <!-- 1. Sección de Imagen -->
            <div class="service-image-section">
              <a href="/services/pavers/">
                <figure class="service-image">
                  <Image
                    src={paverService}
                    alt="Pavers"
                    width={370}
                    height={278}
                    format="webp"
                  />
                </figure>
              </a>
            </div>

            <!-- 2. Sección de Icono -->
            <div class="service-icon-section">
              <div class="icon-box">
                <i class="fas fa-th-large"></i>
              </div>
            </div>

            <!-- 3. Sección de Título -->
            <div class="service-title-section">
              <h3 class="service-title">
                <a href="/services/pavers/">Pavers</a>
              </h3>
            </div>

            <!-- 4. Sección de Descripción -->
            <div class="service-description-section">
              <p class="service-description">
                We create elegant, long-lasting paver installations customized
                for driveways, patios, and walkways. Each project is crafted
                with precision and premium materials to elevate your outdoor
                aesthetics.
              </p>
            </div>

            <!-- 5. Sección de Botón -->
            <div class="service-button-section">
              <a href="/services/pavers/" class="service-btn">
                Read More <i class="fas fa-angles-right"></i>
              </a>
            </div>
          </div>
        </div>

        <!-- Concrete -->
        <div class="swiper-slide">
          <div class="service-card">
            <!-- 1. Sección de Imagen -->
            <div class="service-image-section">
              <a href="/services/concrete/">
                <figure class="service-image">
                  <Image
                    src={concreteService}
                    alt="Concrete"
                    width={370}
                    height={278}
                    format="webp"
                  />
                </figure>
              </a>
            </div>

            <!-- 2. Sección de Icono -->
            <div class="service-icon-section">
              <div class="icon-box">
                <i class="fas fa-hard-hat"></i>
              </div>
            </div>

            <!-- 3. Sección de Título -->
            <div class="service-title-section">
              <h3 class="service-title">
                <a href="/services/concrete/">Concrete</a>
              </h3>
            </div>

            <!-- 4. Sección de Descripción -->
            <div class="service-description-section">
              <p class="service-description">
                We deliver expertly poured and finished concrete work for
                sidewalks, curbs, aprons, driveways, and walkways. Our team
                ensures strength, safety, and a polished appearance that
                complements any residential or commercial space.
              </p>
            </div>

            <!-- 5. Sección de Botón -->
            <div class="service-button-section">
              <a href="/services/concrete/" class="service-btn">
                Read More <i class="fas fa-angles-right"></i>
              </a>
            </div>
          </div>
        </div>

        <!-- Landscaping -->
        <div class="swiper-slide">
          <div class="service-card">
            <!-- 1. Sección de Imagen -->
            <div class="service-image-section">
              <a href="/services/landscaping/">
                <figure class="service-image">
                  <Image
                    src={landscapingService}
                    alt="Landscaping"
                    width={370}
                    height={278}
                    format="webp"
                  />
                </figure>
              </a>
            </div>

            <!-- 2. Sección de Icono -->
            <div class="service-icon-section">
              <div class="icon-box">
                <i class="fas fa-tree"></i>
              </div>
            </div>

            <!-- 3. Sección de Título -->
            <div class="service-title-section">
              <h3 class="service-title">
                <a href="/services/landscaping/">Landscaping</a>
              </h3>
            </div>

            <!-- 4. Sección de Descripción -->
            <div class="service-description-section">
              <p class="service-description">
                We provide comprehensive landscaping solutions that transform
                your outdoor environment. Our services include lush sod
                installation, nutrient-rich topsoil application, efficient
                drainage systems, and thorough power washing.
              </p>
            </div>

            <!-- 5. Sección de Botón -->
            <div class="service-button-section">
              <a href="/services/landscaping/" class="service-btn">
                Read More <i class="fas fa-angles-right"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Service Slider area end -->
